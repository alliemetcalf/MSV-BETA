rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Global Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Role-based access helpers
    function getUserRole(uid) {
      // Get the user's role from their user profile document in the /users collection.
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    function isAdmin() {
      // An admin is a signed-in user whose role in their user document is 'admin'.
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }
    
    function isAssistant() {
       return isSignedIn() && getUserRole(request.auth.uid) == 'assistant';
    }

    // Rule Definitions

    // Users Collection:
    // - Anyone can read a user's profile.
    // - Only the user themselves or an admin can update a profile.
    // - Admins cannot change a user's role directly on the document, 
    //   this must be done via a backend flow.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
      allow update: if isAdmin() && !(request.resource.data.role is string && resource.data.role != request.resource.data.role);
    }
    
    // User Subcollections (e.g., doorCodes)
    // - Owners can read/write their own subcollections.
    // - Admins can read any user's subcollections.
    match /users/{userId}/doorCodes/{docId} {
       allow read, write: if isOwner(userId) || isAdmin();
    }

    // Site configuration can be read by any signed-in user, but only written by admins.
    match /siteConfiguration/{document=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Tenants can be read, listed, and written by any signed-in user.
    match /tenants/{tenantId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    // Property profiles can be read by any signed-in user, but only written by admins.
    match /properties/{propertyId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
