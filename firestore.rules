rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Global Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Role-based access helpers
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    function isSuperAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'superadmin';
    }
    
    function isManager() {
       return isSignedIn() && getUserRole(request.auth.uid) == 'manager';
    }

    function isContractor() {
       return isSignedIn() && getUserRole(request.auth.uid) == 'contractor';
    }

    // Rule Definitions

    // Users Collection:
    match /users/{userId} {
      // Allow superadmins to read any user document.
      allow get: if isSuperAdmin();

      // Allow users to read their own document
      allow get: if isOwner(userId);
      
      // Allow only superadmins to create, update, or delete user documents
      allow create, update, delete: if isSuperAdmin();

      // Explicitly allow any signed in user to list the collection for the admin panel.
      allow list: if isSignedIn();
    }
    
    // Door Codes Collection:
    match /doorCodes/{docId} {
       allow read: if isSuperAdmin() || isManager() || isContractor();
       allow write: if isSuperAdmin() || isManager();
    }

    // Site configuration
    match /siteConfiguration/{document=**} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
    
    // Tenants
    match /tenants/{tenantId} {
      allow read: if isSuperAdmin() || isManager() || isContractor();
      allow write: if isSuperAdmin() || isManager();
    }

    // Properties
    match /properties/{propertyId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin() || isManager();
    }

    // Expenses
    match /expenses/{expenseId} {
      allow read, write: if isSuperAdmin() || isManager();
    }

    // Rent Payments
    match /rentPayments/{paymentId} {
      allow read, write: if isSuperAdmin() || isManager();
    }

    // Contractor tasks
    match /contractorTasks/{taskId} {
      allow read, list: if isSuperAdmin() || isManager() || isContractor();
      allow write: if isSuperAdmin() || isManager();
      allow create, update: if isContractor() && request.resource.data.assignedTo == request.auth.uid;
    }
  }
}
