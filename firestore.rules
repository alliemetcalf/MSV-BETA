rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions for Reusable Logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check for the 'admin' role in the user's authentication token (custom claim).
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    // Allow owners to write to their own user-specific data. Admins can read any user's data.
    match /users/{userId}/{document=**} {
      // Any signed in user can read any profile, but only owners or admins can write.
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Site configuration can be read by any signed-in user, but only written by admins.
    match /siteConfiguration/{document=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Tenants can be read/listed by any signed-in user, but only written by admins.
    match /tenants/{tenantId} {
      allow read, list: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Fallback rule to allow any signed-in user to read/list any other collection.
    // This is more permissive for development.
    match /{path=**} {
      allow read, list: if isSignedIn();
    }
  }
}
