rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Global Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Role-based access helpers
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    function isSuperAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'superadmin';
    }
    
    function isManager() {
       return isSignedIn() && getUserRole(request.auth.uid) == 'manager';
    }

    function isContractor() {
       return isSignedIn() && getUserRole(request.auth.uid) == 'contractor';
    }

    // Rule Definitions

    // Users Collection:
    match /users/{userId} {
      allow read, write: if isSuperAdmin() || isOwner(userId);
    }
    
    // User Subcollections (e.g., doorCodes)
    match /users/{userId}/doorCodes/{docId} {
       allow read, write: if isSuperAdmin() || isManager();
    }

    // Site configuration
    match /siteConfiguration/{document=**} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
    
    // Tenants
    match /tenants/{tenantId} {
      allow read, write: if isSuperAdmin() || isManager();
    }

    // Properties
    match /properties/{propertyId} {
      allow read, write: if isSuperAdmin() || isManager();
      // Allow any signed-in user to list/get properties
      allow list, get: if isSignedIn();
    }

    // Expenses
    match /expenses/{expenseId} {
      allow read, write: if isSuperAdmin() || isManager();
    }

    // Rent Payments
    match /rentPayments/{paymentId} {
      allow read, write: if isSuperAdmin() || isManager();
    }

    // Contractor tasks
    match /contractorTasks/{taskId} {
      allow read, write: if isSuperAdmin() || isManager();
      allow list, get: if isContractor();
    }
  }
}
