rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions for Reusable Logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow owners to write to their own user-specific data. Admins can read any user's data.
    match /users/{userId}/{document=**} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }
    
    // Site configuration can be read by any signed-in user, but only written by admins.
    match /siteConfiguration/{document=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Fallback rule to allow admins to read any other collection.
    match /{path=**} {
      allow read: if isAdmin();
    }
  }
}
