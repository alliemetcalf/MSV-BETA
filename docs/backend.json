{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique identifier for the user."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "enum": ["admin", "user"],
          "description": "The role of the user."
        }
      },
      "required": ["uid", "email", "role"]
    }
  },
  "auth": {
    "providers": ["email"]
  }
}
