{
  "entities": {
    "DoorCode": {
      "title": "DoorCode",
      "type": "object",
      "description": "Represents a door code for a specific property.",
      "properties": {
        "location": {
          "type": "string",
          "description": "The physical location of the door (e.g., 'Front Door', 'Garage')."
        },
        "code": {
          "type": "string",
          "description": "The door code itself."
        },
        "doorLockType": {
          "type": "string",
          "description": "The type of the door lock.",
          "enum": [
            "Keypad",
            "Smart Lock",
            "Key Box",
            "Other"
          ]
        },
        "lastChanged": {
          "type": "string",
          "description": "The date and time the door code was last changed.",
          "format": "date-time"
        }
      },
      "required": [
        "location",
        "code",
        "doorLockType"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "collections": [
      {
        "path": "/users/{userId}/doorCodes",
        "schema": {
          "$ref": "#/entities/DoorCode"
        },
        "description": "Stores door codes for a specific user."
      }
    ]
  }
}
