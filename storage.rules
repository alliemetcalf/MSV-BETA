rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads by anyone (e.g., for public instruction images)
    match /lock-type-instructions/{lockTypeId}/{fileName} {
      allow read;
      // Allow writes only by authenticated users.
      // You can add further restrictions, e.g., checking if the user is an admin.
      allow write: if request.auth != null && 
                    request.resource.size < 5 * 1024 * 1024 &&
                    request.resource.contentType.matches('image/(jpeg|png|tiff)');
    }
  }
}
